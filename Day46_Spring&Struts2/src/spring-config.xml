<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="user" class="com.lanou.study.domain.User">
        <constructor-arg name="name" value="滑铁卢"/>
    </bean>

    <bean id="userDao"
          class="com.lanou.study.dao.UserDao">
        <property name="user" ref="user"/>
    </bean>

    <bean id="userService" class="com.lanou.study.service.UserService">
        <property name="userDao" ref="userDao"/>
    </bean>

    <bean id="userAction"
          class="com.lanou.study.web.controller.UserAction"
          scope="prototype"
    >

        <property name="userService"
                  ref="userService"/>

    </bean>



</beans>